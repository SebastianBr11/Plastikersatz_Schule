---
import Layout from '../layouts/Layout.astro'

import img2 from '../bilder/komprimiert/unsplash1-min.jpg'
import img1 from '../bilder/komprimiert/unsplash2-min.jpg'
import img3 from '../bilder/Plastik/plastik1.jpg'
import img4 from '../bilder/Plastik/plastik3.jpg'
import InfoCard from '../components/InfoCard.astro'
---

<Layout
	title='Plastikersatz - Gefahren'
	description='Übersicht zu Gefahren für Plastik'
	pageIdentifier='gefahren'
>
	<style>
		main.gefahren {
			height: auto;
			padding-bottom: 2rem;
		}

		section.gefahren {
			color: var(--textGray2);
			text-align: center;
			padding: 2rem 2rem;
		}

		@media screen and (min-width: 1600px) {
			section.gefahren {
				padding: 82.104px;
			}
		}

		.list-container {
			z-index: 10;
			margin-top: 2rem;
		}

		.list-container ul {
			margin: 1rem 0;
			list-style: none;
		}

		.list-container li {
			margin-bottom: 2rem;
		}
	</style>

	<main class='gefahren'>
		<div id='stripes' aria-hidden='true'>
			<span aria-hidden='true'></span>
		</div>

		<div class='main-hero m-width'>
			<div class='title title-gefahren'>
				<h1 class='title-h'>
					Gründe wieso Plastik schlecht für die Umwelt ist
				</h1>
				<p class='title-p'>Gefahren</p>
			</div>
		</div>
	</main>

	<section class='gefahren m-width'>
		<div class='list-container'>
			<ul>
				<li>
					<InfoCard
						image={{
							src: img1.src,
							alt: 'Plastik',
						}}
					>
						Plastik löst sich nicht auf, da es ein ewigbleibendes Material ist
						und Jahrtausende zum Abbau benötigt Stück ist bleibt es irgendwo auf
						unserem Planeten erhalten.
					</InfoCard>
				</li>
				<li>
					<InfoCard
						image={{
							src: img2.src,
							alt: 'Plastik',
						}}
					>
						Der Rohstoff Plastik ist begrenzt, da er aus Erdöl bzw. Rohöl
						besteht und diese limitiert sind.
					</InfoCard>
				</li>
				<li>
					<InfoCard
						image={{
							src: img3.src,
							alt: 'Plastik',
						}}
					>
						Plastik ist ein giftiges Material welches Weichmacher enthält, diese
						können die Entwicklung von Kindern stören. Des Weiteren gelangt es
						in unsere Nahrungskette da Fische Mikroplastik essen und das Plastik
						dadurch auf unseren Tisch kommt.
					</InfoCard>
				</li>
				<li>
					<InfoCard
						image={{
							src: img4.src,
							alt: 'Plastik',
						}}
					>
						Plastik zerstört die Natur, da es in die Meere gelangt und dort von
						Meeressäugern und Seevögeln gegessen wird. Diese können daran
						Sterben und Krankheiten übertragen.
					</InfoCard>
				</li>
			</ul>
		</div>
	</section>
</Layout>
